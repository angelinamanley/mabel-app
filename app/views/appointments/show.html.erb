<h1>Show Appointment</h1>

<h1>Service Type: <%= @appointment.service_type %></h1>
<h2>Pet Name: <%= @appointment.pet.name %></h2>
<h2>Service Provider Name:<%= @appointment.service_provider.company_name %></h2>
<h2>Date: <%= @appointment.date %></h2>
<h2>Duration: <%= @appointment.duration %></h2>
<h2>Cost: <%= @appointment.duration * @appointment.service_provider.rates %></h2>
<% if @appointment.date < DateTime.now %>
    <% if @appointment.review_score == nil || @appointment.review_score == "" %>
    <%= link_to "Review this appointment", review_form_path(@appointment.id) %>
    <% else %>
<h2><%= "Review Score: #{@appointment.review_score}" %></h2>
<h2> <%= "Review Content: #{@appointment.review_content}" %></h2>
    <% end %>
<% else %>
    <%= link_to 'Cancel Appointment', @appointment, { method: 'delete', data: {confirm: 'Are you sure?'} } %>
    <%= link_to 'Edit Appointment', edit_appointment_path(@appointment) %>
<% end %>

<br>
